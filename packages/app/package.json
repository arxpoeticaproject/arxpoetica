{
	"name": "@arxpoetica/app",
	"description": "Arx Poetica Website.",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"volta": {
		"node": "20.11.1",
		"pnpm": "8.15.4"
	},
	"scripts": {
		"dev": "pnpm run dev:postcss & dotenv vite dev",
		"dev:postcss": "dotenv node scripts/postcss/watch.js",
		"preview": "dotenv vite preview",
		"build": "pnpm run build:postcss && dotenv vite build --verbose",
		"build:postcss": "dotenv node scripts/postcss/build.js",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"dependencies": {
		"devalue": "4.3.2"
	},
	"devDependencies": {
		"@playwright/test": "1.42.1",
		"@poppanator/sveltekit-svg": "4.2.1",
		"@sveltejs/adapter-auto": "3.2.0",
		"@sveltejs/adapter-vercel": "5.2.0",
		"@sveltejs/kit": "2.5.5",
		"@sveltejs/vite-plugin-svelte": "3.0.2",
		"@types/eslint": "8.56.6",
		"@typescript-eslint/eslint-plugin": "7.4.0",
		"@typescript-eslint/parser": "7.4.0",
		"ansi-colors": "4.1.3",
		"cheap-watch": "1.0.4",
		"dotenv-cli": "7.4.1",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.36.0-next.13",
		"postcss": "8.4.38",
		"postcss-custom-media": "10.0.4",
		"postcss-easy-import": "4.0.0",
		"postcss-global-nested": "1.2.0",
		"postcss-hexrgba": "2.1.0",
		"postcss-media-minmax": "5.0.0",
		"postcss-mixins": "10.0.0",
		"postcss-nested": "6.0.1",
		"postcss-scss": "4.0.9",
		"postcss-simple-vars": "7.0.1",
		"postcss-strip-inline-comments": "0.1.5",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.2",
		"svelte": "5.0.0-next.89",
		"svelte-check": "3.6.8",
		"tslib": "2.6.2",
		"typescript": "5.4.3",
		"vite": "5.2.7",
		"vite-plugin-mkcert": "1.17.5",
		"vitest": "1.4.0"
	}
}
