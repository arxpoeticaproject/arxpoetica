:root {
	// --black: hsl(60, 6%, 10%);
	--black-hue: 60;
	--black-hsl-true: 0 0% 0%;
	--black-hsl-1: var(--black-hue) 6% 5%;
	--black-hsl-2: var(--black-hue) 6% 10%;
	--black-hsl-3: var(--black-hue) 6% 15%;
	--black-hsl-4: var(--black-hue) 6% 20%;
