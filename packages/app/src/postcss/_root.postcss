	--black-hsl-6: var(--black-hue) 6% 30%;
	--black-true: hsl(var(--black-hsl-true));
	--black-1: hsl(var(--black-hsl-1));
	--black-2: hsl(var(--black-hsl-2));
	--black-3: hsl(var(--black-hsl-3));
	--black-4: hsl(var(--black-hsl-4));
	--black-5: hsl(var(--black-hsl-5));
	--black-6: hsl(var(--black-hsl-6));

