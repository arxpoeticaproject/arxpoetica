*,
::before,
::after {
	box-sizing: inherit;
}

::-webkit-scrollbar {
	width: 12rem;
}
::-webkit-scrollbar-track {
	background-color: #363630;
}
::-webkit-scrollbar-thumb {
	background-color: #515148;
	border-left: 1rem solid #363630;
	border-radius: 12rem;
}

html {
	font-size: 1px;
	box-sizing: border-box;
}

html,
body {
	background-color: var(--black-2);
}

body {
	background-color: var(--black-2);
	margin: 0;
	font: 16rem/1.3 var(--font);
	color: var(--white-2);
}
