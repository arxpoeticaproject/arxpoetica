*,
::before,
::after {
	box-sizing: inherit;
}

::-webkit-scrollbar { width: 12rem;}
::-webkit-scrollbar-track {
	background-color: #363630;
}
::-webkit-scrollbar-thumb {
	background-color: #515148;
	border-left: 1rem solid #363630;
	border-radius: 12rem;
}

