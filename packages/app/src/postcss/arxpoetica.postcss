html {
	font-size: 1px;
	box-sizing: border-box;
}

html,
body {
	background-color: var(--black-2);
}

body {
	background-color: var(--black-2);
	margin: 0;
	font: 20rem/1.6 var(--font);
	color: var(--white-2);
}

p {
	margin: 0 0 25rem;
}

h1, .h1 {
	margin: 0;
	font: 80rem/90rem var(--font-alt);
	@media (--small) { font: 50rem/60rem var(--font-alt); }
}
h2, .h2 {
	margin: 0 0 40rem;
	font: 56rem/1 var(--font-alt);
}
h3, .h3 {
	margin: 0 0 12rem;
	font: var(--bold) 26rem/1.3 var(--font-alt);
}
h4, .h4 {
	margin: 0 0 10rem;
	color: var(--gray-4);
	font: var(--heavy) 17rem/1.3 var(--font);
	text-transform: uppercase;
	letter-spacing: 1.2rem;
}
h5, .h5 {
	margin: 0 0 10rem;
	font: var(--light) 16rem/1.3 var(--font);
	text-transform: uppercase;
}
h6, .h6 {
	margin: 0 0 10rem;
	color: var(--gray-4);
	font: 13rem/1.3 var(--font);
	letter-spacing: 2rem;
	text-transform: uppercase;
}

a {
	color: inherit;
	text-decoration: underline;
	&:hover { color: var(--red-4); }
}

blockquote {
	overflow: hidden;
	position: relative;
	margin: 40rem 0;
	padding: 40rem 40rem 50rem;
	background-color: black;
	font: italic var(--light-alt) 26rem/1.2 var(--font-alt);
	letter-spacing: 1rem;
	text-align: justify;
	hyphens: auto;
	:last-child { margin: 0; }
	&::after {
		content: '';
		// display: block;
		position: absolute;
		right: 0rem;
		bottom: 30rem;
		width: 40%;
		height: 2rem;
		background-color: var(--red-4);
	}
}

svg {
	fill: currentColor;
	width: 100%;
	height: 100%;
}

pre {
	overflow: auto;
	margin: 0 0 20rem;
	padding: 8rem;
	background-color: var(--brown-1);
	border-left: 4rem solid var(--red-4);
	font: 18rem/1.5 var(--font-mono);
	> code {
		display: block;
		// margin-top: -26rem;
		// display: inline;
		// max-width: auto;
		// padding: 0;
		// margin: 0;
		// overflow: visible;
		// line-height: inherit;
		// word-wrap: normal;
		// background-color: initial;
		// border: 0;
	}
}

code {
	padding: 0.2em 0.4em;
	margin: 0;
	font: 16rem/1.2 var(--font-mono);
	background-color: var(--brown-1);
	border-radius: 4rem;
	tab-size: 2;
}

table {
	margin: 50rem 0;
	border-collapse: collapse;
	box-shadow: 0 5rem 20rem rgba(0, 0, 0, 0.25);
	font: 17rem/1.2 var(--font);
}
th {
	padding: 8rem 15rem;
	background-color: var(--brown-1);
	color: var(--red-4);
	text-align: left;
	vertical-align: bottom;
}
td {
	padding: 8rem 15rem;
	border-bottom: 1rem solid var(--brown-1);
	tr:hover & {
		background-color: var(--brown-1);
	}
}
